{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": [
      "es7",
      "es2017.object"
    ],
    "outDir": "dist"
  },
  "include": [
    "lib/**/*"
  ],
  "compileOnSave": false
}
